  "version": "0.2.0",
  "configurations": [
    {
      "name": "mandelbrot",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/mandelbrot",
      "args": [
        "0.27085",
        "0.27100",
        "0.004640",
        "0.004810",
        "1000",
        "8192",
        "pic.ppm"
      ],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ]
    }
  ]
}